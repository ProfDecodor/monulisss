{
    "manifest_version": 3,
    "name": "MonUlisss",
    "version": "0.8.3",
    "description": "Tentative d'extraction de données de myUlis et de calcul hasardeux d'un taux de présence.",
    "browser_specific_settings": {
      "gecko": {
        "id": "monuliss@etnic.be",
        "update_url": "https://etnic.perfectday.be/monulisss/updates.json"
      }
    },
    "action": {
        "default_popup": "src/monulisss.html",
        "default_icon": {
            "32": "icons/unicorn-32.png",
            "48": "icons/unicorn-48.png",
            "96": "icons/unicorn-96.png",
            "128": "icons/unicorn-128.png"
        }
    },
    "icons": {
        "32": "icons/unicorn-32.png",
        "48": "icons/unicorn-48.png",
        "96": "icons/unicorn-96.png",
        "128": "icons/unicorn-128.png"
    },
    "permissions": ["scripting","tabs","activeTab","storage"],
    "options_ui": {
      "page": "options.html"
    },
    "host_permissions": ["https://myulis.etnic.be/*"]
  }